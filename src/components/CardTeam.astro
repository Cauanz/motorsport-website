---

  const { team } = Astro.props;

---

<!-- TODO FAZER CAROSEL DE EQUIPES/IMAGENS -->

  <div class="card">
    <div class="card-header">
      <img class="team-logo" src={team.logo} alt={`${team.name} logo`} />
    <h2>{team.name}</h2>
    <h3>{team.carNumbers[0]}</h3>
  </div>
  <div class="card-image">
    <img src={team.image} alt={`${team.name} car`} />
  </div>
  <div class="card-body">
    <h3>Pilotos</h3>
    <ul class="drivers-list">
      {team.drivers.map((name: string) => (
        <li>{name}</li>
      ))}
    </ul>
  </div>
</div>

<style>

  .card {
    padding: 1.5rem;
    border: 1px solid #222;
    border-radius: 16px;
    background: #181818;
    color: #fff;
    box-shadow: 0 4px 24px rgba(0,0,0,0.15);
    max-width: 450px;
    margin: 2rem auto;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .card:hover {
    transform: translateY(-4px) scale(1.03);
    box-shadow: 0 8px 32px rgba(0,0,0,0.25);
  }
  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .team-logo {
    width: 48px;
    height: 48px;
    object-fit: contain;
    border-radius: 50%;
    background: #fff;
    padding: 0.25rem;
    border: 1px solid #333;
  }
  .card-header h2 {
    font-size: 1.5rem;
    margin: 0;
    font-weight: 700;
    letter-spacing: 1px;
  }
  .card-image {
    width: 100%;
    margin-bottom: 1rem;
    display: flex;
    justify-content: center;
  }
  .card-image img {
    width: 100%;
    max-width: 250px;
    border-radius: 10px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.10);
  }
  .card-body h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #ffb300;
    letter-spacing: 0.5px;
  }
  .drivers-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }
  .drivers-list li {
    background: #232323;
    padding: 0.4rem 0.9rem;
    border-radius: 20px;
    font-size: 0.98rem;
    font-weight: 500;
    color: #fff;
    border: 1px solid #333;
    transition: background 0.2s;
  }
  .drivers-list li:hover {
    background: #ffb300;
    color: #181818;
  }
</style>