<script is:inline define:vars={{ category }}>

  let currentIndex = 0;

  const img = document.getElementById("carousel-img");
  const title = document.getElementById("carousel-title");
  const desc = document.getElementById("carousel-desc");
	const logo = document.getElementById("carousel-logo");


  document.getElementsByClassName("next")[0].onclick = () => {
    currentIndex = (currentIndex + 1) % category.length;
    img.src = category[currentIndex].image;
    title.textContent = category[currentIndex].name;
    desc.textContent = category[currentIndex].team;
		logo.src = category[currentIndex].logo;
  };

  document.getElementsByClassName("prev")[0].onclick = () => {
    currentIndex = (currentIndex - 1 + category.length) % category.length;
    img.src = category[currentIndex].image;
    title.textContent = category[currentIndex].name;
    desc.textContent = category[currentIndex].team;
		logo.src = category[currentIndex].logo;
  };

</script>



<style>

  .carousel {
    width: 100vw;
    max-width: 1200px;
    margin: 40px auto;
    height: 500px;
    position: relative;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0,0,0,0.18);
    background: linear-gradient(135deg, #232526 0%, #414345 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel ul {
    width: 100%;
    height: 100%;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity 0.5s cubic-bezier(.4,0,.2,1);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .slide[data-active] {
    opacity: 1;
    z-index: 1;
  }

  .slide > img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    border-radius: 24px;
    filter: brightness(0.85) saturate(1.1);
    transition: filter 0.3s;
  }

	.title-container {
		display: flex;
		justify-content: space-between;
	}

  .title-container img {
		width: 100px;
  }

  .carousel-info {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 32px 32px 24px 32px;
    background: linear-gradient(0deg, rgba(30,30,30,0.85) 80%, rgba(30,30,30,0.0) 100%);
    color: #fff;
    border-radius: 0 0 24px 24px;
    box-sizing: border-box;
  }

  .carousel-info h2 {
    font-size: 2.2rem;
    font-weight: 700;
    margin: 0 0 8px 0;
    letter-spacing: 1px;
  }

  .carousel-info p {
    font-size: 1.1rem;
    margin: 0;
    opacity: 0.85;
  }

  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(40,40,40,0.7);
    border: none;
    color: #fff;
    font-size: 2.2rem;
    padding: 0.5em 0.9em;
    border-radius: 50%;
    cursor: pointer;
    z-index: 2;
    transition: background 0.2s, box-shadow 0.2s;
    box-shadow: 0 2px 8px rgba(0,0,0,0.18);
  }

  .carousel-btn:hover {
    background: #ff3c3c;
    color: #fff;
    box-shadow: 0 4px 16px rgba(255,60,60,0.18);
  }

  .carousel-btn.prev {
    left: 10px;
    top: 48px;
  }

  .carousel-btn.next {
    right: 10px;
    top: 48px;
  }

  @media (max-width: 700px) {
    .carousel {
      height: 320px;
      max-width: 98vw;
      border-radius: 16px;
    }
    .carousel-info {
      padding: 18px 16px 12px 16px;
      border-radius: 0 0 16px 16px;
    }
    .carousel-btn {
      font-size: 1.5rem;
      left: 8px;
      right: 8px;
    }
  }


</style>