  color: #fff;
  opacity: 0.85;
}

.drivers-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.drivers-list li {
  background: rgba(255,60,60,0.12);
  color: #fff;
  padding: 8px 16px;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 500;
  box-shadow: 0 2px 8px rgba(255,60,60,0.08);
  transition: background 0.2s;
}

.drivers-list li:hover {
  background: #ff3c3c;
  color: #fff;
}

.carousel-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 32px 32px 24px 32px;
  background: linear-gradient(0deg, rgba(30,30,30,0.85) 80%, rgba(30,30,30,0.0) 100%);
  color: #fff;
  border-radius: 0 0 24px 24px;
  box-sizing: border-box;
}

.carousel-info h2 {
  font-size: 2.2rem;
  font-weight: 700;
  margin: 0 0 8px 0;
  letter-spacing: 1px;
}

.carousel-info p {
  font-size: 1.1rem;
  margin: 0;
  opacity: 0.85;
}

.carousel-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(40,40,40,0.7);
  border: none;
  color: #fff;
  font-size: 2.2rem;
  padding: 0.5em 0.9em;
  border-radius: 50%;
  cursor: pointer;
  z-index: 2;
  transition: background 0.2s, box-shadow 0.2s;
  box-shadow: 0 2px 8px rgba(0,0,0,0.18);
}

.carousel-btn:hover {
  background: #ff3c3c;
  color: #fff;
  box-shadow: 0 4px 16px rgba(255,60,60,0.18);
}

.carousel-btn.prev {
  left: 10px;
}

.carousel-btn.next {
  right: 10px;
}

  @media (max-width: 700px) {
    .carousel {
      height: 320px;
      max-width: 98vw;
      border-radius: 16px;
    }
    .carousel-info {
      padding: 18px 16px 12px 16px;
      border-radius: 0 0 16px 16px;
    }
    .carousel-btn {
      font-size: 1.5rem;
      left: 8px;
      right: 8px;
    }
    .info {
      padding: 16px 10px;
      border-radius: 10px;
      gap: 10px;
    }
    .info h2 {
      font-size: 1.1rem;
    }
    .info h3 {
      font-size: 1rem;
    }
    .drivers-list li {
      font-size: 0.95rem;
      padding: 6px 10px;
      border-radius: 6px;
    }
  }

</style>