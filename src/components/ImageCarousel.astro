---
const { category } = Astro.props;

interface Country {
  name: string;
  abr: string;
}

interface TeamInfo {
  name: string;
  manufacturer: string;
  team: string;
  image: string;
  logo: string;
  country: Country;
  carNumbers: string[];
  drivers: string[];
}
---


<div class="content">

  <div class="carousel">
    
    <ul>
      <li class="slide" data-active>
        <img id="carousel-img" src={category[0].image} alt={category[0].name} />
      <div class="carousel-info">
        <span class="title-container">
          <h2 id="carousel-title">{category[0].name} - {category[0].carNumbers}</h2>
          <img id="carousel-logo" src={category[0].logo} alt="" srcset="">
        </span>
        <p id="carousel-desc">{category[0].team}</p>
      </div>
    </li>
  </ul>
  
</div>
  <button class="carousel-btn prev" aria-label="Anterior">
    &#8592;
  </button>
  <button class="carousel-btn next" aria-label="PrÃ³ximo">
    &#8594;
  </button>



  <div class="info">
    <h2 id="carousel-country">{category[0].country.name} - {category[0].country.abr}</h2>

    <h3>Pilotos</h3>
    <ul class="drivers-list">
      {category[0].drivers.map((name: string) => (
        <li>{name}</li>
      ))}
    </ul>
  </div>
</div>

<script is:inline define:vars={{ category }}>

  let currentIndex = 0;

  const img = document.getElementById("carousel-img");
  const title = document.getElementById("carousel-title");
  const desc = document.getElementById("carousel-desc");
	const logo = document.getElementById("carousel-logo");

  const country = document.getElementById("carousel-country");

  const drivers = document.getElementsByClassName("drivers-list")[0];


  document.getElementsByClassName("next")[0].onclick = () => {
    currentIndex = (currentIndex + 1) % category.length;
    img.src = category[currentIndex].image;
    title.textContent = category[currentIndex].name + " - " + category[currentIndex].carNumbers;
    desc.textContent = category[currentIndex].team;
		logo.src = category[currentIndex].logo;

    country.textContent = category[currentIndex].country.name + " - " + category[currentIndex].country.abr
    
    drivers.innerHTML = "";
    category[currentIndex].drivers.forEach((driver) => {
      const li = document.createElement("li");
      li.textContent = driver;
      drivers.appendChild(li);
    });
  };

  document.getElementsByClassName("prev")[0].onclick = () => {
    currentIndex = (currentIndex - 1 + category.length) % category.length;
    img.src = category[currentIndex].image;
    title.textContent = category[currentIndex].name + " - " + category[currentIndex].carNumbers;
    desc.textContent = category[currentIndex].team;
		logo.src = category[currentIndex].logo;

    country.textContent = category[currentIndex].country.name + " - " + category[currentIndex].country.abr

    drivers.innerHTML = "";
    category[currentIndex].drivers.forEach((driver) => {
      const li = document.createElement("li");
      li.textContent = driver;
      drivers.appendChild(li);
    });
  };

</script>



<style is:global>
.carousel {
  width: 100vw;
  max-width: 1200px;
  margin: 40px auto;
  height: 500px;
  position: relative;
  border-radius: 24px;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0,0,0,0.18);
  background: linear-gradient(135deg, #232526 0%, #414345 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.carousel ul {
  width: 100%;
  height: 100%;
  list-style: none;
  margin: 0;
  padding: 0;
}

.slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.5s cubic-bezier(.4,0,.2,1);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.slide[data-active] {
  opacity: 1;
  z-index: 1;
}

.slide > img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  border-radius: 24px;
  filter: brightness(0.85) saturate(1.1);
  transition: filter 0.3s;
}

.title-container {
  display: flex;
  justify-content: space-between;
  height: 60px;
  align-items: center;
}

.title-container img {
  width: 100px;
  object-fit: contain;
}

.info {
  margin: 32px auto 0 auto;
  max-width: 600px;
  background: linear-gradient(90deg, #232526 0%, #414345 100%);
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.12);
  padding: 28px 32px;
  color: #fff;
  display: flex;
  flex-direction: column;
  gap: 18px;
}

.info h2 {
  font-size: 1.6rem;
  font-weight: 600;
  margin: 0 0 8px 0;
  letter-spacing: 1px;
  color: #ff3c3c;
}

.info h3 {
