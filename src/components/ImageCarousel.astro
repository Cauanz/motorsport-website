---

const { category } = Astro.props;

interface Country {
  name: string;
  abr: string;
}

interface TeamInfo {
  name: string;
  manufacturer: string;
  team: string;
  image: string;
  logo: string;
  country: Country;
  carNumbers: string[];
  drivers: string[];
}


let currentIndex = 0;

function next() {
  currentIndex = (currentIndex + 1) % category.length;
}

function previous() {
  currentIndex = (currentIndex - 1 + category.length) % category.length;
}


---


<!-- TODO - CONSERTAR CAROSSEL -->
<div class="carousel">

  <button onclick=`${next}`>Next</button>
  <button onclick=`${previous}`>Previous</button>

  <ul>
    <li>
      <img src={category[currentIndex].image} alt={category[currentIndex].name} />
      <h2>{category[currentIndex].name}</h2>
      <p>{category[currentIndex].category}</p>
    </li>
  </div>
  </ul>
</div>




<style>

  .carousel {
    width: 100vw;
    height: 500px;
    position: relative;
  }

  .slide {
    position: absolute;
    inset: 0;
    opacity: 0;
  }

  .slide > img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .slide[data-active] {
    opacity: 1;
  }


</style>