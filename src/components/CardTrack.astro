---
const { tracks } = Astro.props;
---

<div class="content">

  <div class="carousel-track">
    
    <ul>
      <li class="track-slide" data-active>
        <img id="carousel-track-img" src={tracks[0].image} alt={tracks[0].name} />
      </li>
    </ul>
    
  </div>
  <button class="carousel-track-btn prev" aria-label="Anterior">
    &#8592;
  </button>
  <button class="carousel-track-btn next" aria-label="PrÃ³ximo">
    &#8594;
  </button>

  
  <div class="carousel-track-info">
    <span class="track-title-container">
      <h2 id="carousel-track-title">{tracks[0].nameTrack}</h2>
      <h2 id="carousel-track-country">{tracks[0].country}</h2>
    </span>
    <p id="carousel-track-desc">{tracks[0].nameRace}</p>
    <p id="length">Length: {tracks[0].length_km} | {tracks[0].length_mi}</p>
    <p id="date">Date: {tracks[0].date[0]} - {tracks[0].date[1]}</p>
  </div>
</div>

<script define:vars={{ tracks }}>

  let currentIndex = 0;

  const img = document.getElementById("carousel-track-img");
  const title = document.getElementById("carousel-track-title");
  const desc = document.getElementById("carousel-track-desc");
  const length = document.getElementById("length");
  const date = document.getElementById("date");

  const country = document.getElementById("carousel-track-country");

  const nextImage = () => {
    currentIndex = (currentIndex + 1) % tracks.length;
    img.src = tracks[currentIndex].image;
    title.textContent = tracks[currentIndex].nameTrack;
    desc.textContent = tracks[currentIndex].nameRace;
    length.textContent = "Length: " + tracks[currentIndex].length_km + " | " + tracks[currentIndex].length_mi;
    date.textContent = "Date: " + tracks[currentIndex].date[0] + " - " + tracks[currentIndex].date[1];

    country.textContent = tracks[currentIndex].country
  }

  const previousImage = () => {
    currentIndex = (currentIndex - 1 + tracks.length) % tracks.length;
    img.src = tracks[currentIndex].image;
    title.textContent = tracks[currentIndex].nameTrack;
    desc.textContent = tracks[currentIndex].nameRace;

    country.textContent = tracks[currentIndex].country
  }

  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowLeft") {
      previousImage()
    } else if (e.key === "ArrowRight") {
      nextImage()
    }
  })

  document.getElementsByClassName("next")[0].onclick = () => {
    nextImage()
  };

  document.getElementsByClassName("prev")[0].onclick = () => {
    previousImage()
  };

</script>



<style is:global>

.carousel-track {
  width: 100vw;
  max-width: 1100px;
  margin: 32px auto;
  height: 520px;
  position: relative;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 6px 24px rgba(0,0,0,0.15);
  background: linear-gradient(135deg, #232526 0%, #414345 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.carousel-track ul {
  width: 100%;
  height: 100%;
  list-style: none;
  margin: 0;
  padding: 0;
}

.track-slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.5s cubic-bezier(.4,0,.2,1);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.track-slide[data-active] {
  opacity: 1;
  z-index: 1;
}

.track-slide > img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  border-radius: 20px;
  filter: brightness(0.88) saturate(1.08);
  transition: filter 0.3s;
}

.track-title-container {
  display: flex;
  justify-content: space-between;
  height: 48px;
  align-items: center;
  gap: 16px;
}

.track-title-container img {
  width: 80px;
  object-fit: contain;
}

.carousel-track-info {
  padding: 24px 28px 18px 28px;
  color: #fff;
  box-sizing: border-box;
  background: rgba(35,37,38,0.85);
  margin-top: -8px;
}

.carousel-track-info h2 {
  font-size: 1.6rem;
  font-weight: 700;
  margin: 0 0 6px 0;
  letter-spacing: 1px;
  color: #ff3c3c;
}

.carousel-track-info p {
  font-size: 1rem;
  margin: 0;
  opacity: 0.85;
  margin-bottom: 4px;
}

.carousel-track-btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(40,40,40,0.7);
  border: none;
  color: #fff;
  font-size: 2rem;
  padding: 0.4em 0.8em;
  border-radius: 50%;
  cursor: pointer;
  z-index: 2;
  transition: background 0.2s, box-shadow 0.2s;
  box-shadow: 0 2px 8px rgba(0,0,0,0.18);
}

.carousel-track-btn:hover {
  background: #ff3c3c;
  color: #fff;
  box-shadow: 0 4px 16px rgba(255,60,60,0.18);
}

.carousel-track-btn.prev {
  left: 12px;
}

.carousel-track-btn.next {
  right: 12px;
}

@media (max-width: 700px) {
  .carousel-track {
    height: 240px;
    max-width: 98vw;
    border-radius: 12px;
  }
  .carousel-track-info {
    padding: 12px 8px 8px 8px;
    border-radius: 0 0 12px 12px;
    font-size: 0.95rem;
  }
  .carousel-track-info h2 {
    font-size: 1.1rem;
  }
  .carousel-track-btn {
    font-size: 1.2rem;
    left: 6px;
    right: 6px;
    padding: 0.3em 0.6em;
  }
  .track-title-container {
    height: 32px;
    gap: 8px;
  }
  .track-title-container img {
    width: 48px;
  }
}
</style>
