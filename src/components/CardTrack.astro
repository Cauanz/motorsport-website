<script define:vars={{ tracks }}>

  let currentIndex = 0;

  const img = document.getElementById("carousel-track-img");
  const title = document.getElementById("carousel-track-title");
  const desc = document.getElementById("carousel-track-desc");

  const country = document.getElementById("carousel-track-country");

  const nextImage = () => {
    currentIndex = (currentIndex + 1) % tracks.length;
    img.src = tracks[currentIndex].image;
    title.textContent = tracks[currentIndex].nameTrack;
    desc.textContent = tracks[currentIndex].nameRace;

    country.textContent = tracks[currentIndex].country
  }

  const previousImage = () => {
    currentIndex = (currentIndex - 1 + tracks.length) % tracks.length;
    img.src = tracks[currentIndex].image;
    title.textContent = tracks[currentIndex].nameTrack;
    desc.textContent = tracks[currentIndex].nameRace;

    country.textContent = tracks[currentIndex].country
  }

  document.addEventListener("keydown", (e) => {
    if (e.key === "ArrowLeft") {
      previousImage()
    } else if (e.key === "ArrowRight") {
      nextImage()
    }
  })

  document.getElementsByClassName("next")[0].onclick = () => {
    nextImage()
  };

  document.getElementsByClassName("prev")[0].onclick = () => {
    previousImage()
  };

</script>



<style is:global>
.carousel-track {
  width: 100vw;
  max-width: 1200px;
  margin: 40px auto;
  height: 700px;
  position: relative;
  border-radius: 24px;
  overflow: hidden;
